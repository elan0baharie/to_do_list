<h1><%=@list.name()%></h1>

<% if @tasks.any?() %>
  <h3>Here are your tasks:</h3>

  <ul>
    <% @tasks.each() do |task| %>
    <% if task.id == @list.id %>
      <li><%= task.description() %><a href="/tasks/<%=task.id()%>/edit">Update this task's description</a> </li>
      <% end %>
    <% end %>
  </ul>
<h3> Here are your tasks not yet done</h3>
<ul>
  <% @tasks.not_done().each do |task| %>
    <li><%= task.description %></li>
  <% end %>
</ul>
<% else %>

    <p>There are no tasks yet!</p>

<% end %>



<p><a href="/lists/<%= @list.id() %>/edit">Edit <%= @list.name() %> list</a></p>
<p><a href="/">Return to Main Page</a></p>
